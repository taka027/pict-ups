<%= render 'header' %>

 <div class="container-fluid">
    <!--documents-->
      <div class="row">
        <div class="col-xs-12 col-sm-12 content">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"></span>イチオシの1枚！とその他多数……</h3>
            </div>
            <div class="panel-body">
              <div class="content-row">
               <div class="slider">
                  <%= image_tag 'Munch' %>
                 
               </div>
               
                <h2 class="content-row-title">カテゴリ</h2>
                <div class="row">
                  <% @photos.each do |photo| %>
                    <div class="col-sm-6 col-md-3">
                      <div class="thumbnail">
                        <% if photo.image? %>
                          <%= image_tag(photo.image.thumb.url) %> 
                        <% end %>
                        <div class="caption text-center">
                          <h3><%= photo.title %></h3>
                          <p><%= link_to '見る', '/display_photo', {:class => "btn btn-default", :role => "button"} %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  
                  
                </div><!--row-->
              </div><!--content-row-->
            </div><!-- panel body -->
          </div><!--panel panel-default-->
        </div><!-- content -->
      </div><!--row row-offcanvas row-offcanvas-left-->
    </div><!--container-->
<%= render 'footer' %>